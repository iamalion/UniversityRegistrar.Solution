@{
    Layout = "_Layout";
}

@using UniversityRegistrar.Models;

<h1>Courses</h1>

@if (@Model.Count == 0)
{
    <p>No courses yet added</p>
}

<ul>
    @foreach (Course course in Model)
    {
        <li>@Html.ActionLink($"Name: {course.CourseName}", "Details", new { id = course.CourseId })</li>
    }
</ul>
<p>@Html.ActionLink("Add new course", "Create", "Courses")</p>
<p>@Html.ActionLink("Return home", "Index", "Home")</p>