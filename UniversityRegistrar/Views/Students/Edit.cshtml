@{
    Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student
<div class="container">
    <h1>Edit Student</h1>
    <h4>Editing: @Html.DisplayFor(model => model.StudentName)</h4>
</div>
<hr />

@using (Html.BeginForm())
{
    <div class="form-container">
        @Html.HiddenFor(model => model.StudentId)
        <div>
            @Html.LabelFor(model => model.StudentName)
            @Html.EditorFor(model => model.StudentName)
        </div>
    </div>
    <div class="center">
        <input type="submit" value="Save" class="button"/>
    </div>
    <div class="link-container">
        <p>@Html.ActionLink("Delete Student", "Delete", new { id = Model.StudentId })</p>
        <p>@Html.ActionLink("Back to all students", "Index")</p>
    </div>

}