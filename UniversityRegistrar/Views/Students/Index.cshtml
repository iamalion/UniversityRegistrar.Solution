@{
    Layout = "_Layout";
}

@using UniversityRegistrar.Models;

<h1>Students</h1>

@if (@Model.Count == 0)
{
    <p>No students yet added</p>
}

<ul>
    @foreach (Student student in Model)
    {
        <li>@Html.ActionLink($"Name: {student.StudentName}", "Details", new { id = student.StudentId })</li>
    }
</ul>
<p>@Html.ActionLink("Add new student", "Create", "Students")</p>
<p>@Html.ActionLink("Return home", "Index", "Home")</p>